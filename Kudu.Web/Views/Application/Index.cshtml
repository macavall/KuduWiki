@using Kudu.Core.SourceControl
@using Kudu.Web.Models
@using Kudu.Web.Infrastructure

@model IEnumerable<string>

@{
    ViewBag.Title = "Applications";
}

@if (!Request.IsAuthenticated)
{
<div class="page-header">
<h1>Kudu</h1>
</div>
<text>You need to have an account before you can start. Please @Html.ActionLink("login", "logon", "account") or @Html.ActionLink("register", "register", "account") for a new account.</text>
}
else
{ 
<div class="well">
    <ul class="nav nav-list">
        <li class="nav-header">Applications</li>
        @foreach (var item in Model)
        {    
            <li>
                <a href="@Url.RouteUrl("ApplicationDetails", new { slug = item })">
                    <i class="icon-th-list"></i>
                    @item
                </a>
            </li>
        }
    </ul>    
</div>
}