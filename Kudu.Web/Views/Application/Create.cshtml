@model Kudu.Web.Models.ApplicationViewModel

@{
    ViewBag.Title = "New Application";
}

<h2>New Application</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary()

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RepositoryType, "Repository Type")
        </div>
        <div class="editor-field">
            @Html.DropDownList("RepositoryType")
            @Html.ValidationMessageFor(model => model.RepositoryType)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
}
